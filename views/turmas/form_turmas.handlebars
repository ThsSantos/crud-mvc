    <input type="date" class="form-control" name="descricao" required>
  </div>
    </div>
  </div>
  <div class="row d-flex justify-content-center">
    <div class="col-6">
        <div class="mb-3">
    <label>Data de Conclus√£o</label>
    <input type="date" class="form-control" name="descricao" required>
  </div>
    </div>
  </div>
   <div class="row d-flex justify-content-center">
    <div class="col-6">
        <div class="mb-3">
    <label>Curso</label>

      <select class="form-select" name="curso">
    {{!-- <option selected>Open this select menu</option> --}}
    {{#each cursos}}
    <option value="{{this.id}}">{{this.nome}}</option>
    {{/each}}
  </select>

  </div>
    </div>
  </div>
  <div class="row d-flex justify-content-center">
    <div class="col-6">
        <div class="mb-3">
    <input type="submit" class="btn btn-primary" value="Cadastrar">
  </div>
    </div>
  </div>
</form>
</div>